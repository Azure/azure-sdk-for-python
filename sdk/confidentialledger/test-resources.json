{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "ledgerName": {
      "type": "string",
      "defaultValue": "[resourceGroup().name]",
      "metadata": {
        "description": "Ledger Name"
      },
      "minLength": 3,
      "maxLength": 24
    },
    "resourceGroup": {
      "type": "string",
      "defaultValue": "[resourceGroup().name]",
      "metadata": {
        "description": "Resource Group containing the application."
      }
    },
    "subscriptionId": {
      "type": "string",
      "defaultValue": "[subscription().subscriptionId]",
      "metadata": {
        "description": "Id of the subscription containing the application."
      }
    },
    "tenantId": {
      "type": "string",
      "defaultValue": "72f988bf-86f1-41af-91ab-2d7cd011db47",
      "metadata": {
        "description": "The tenant ID to which the application and resources belong."
      }
    },
    "testApplicationId": {
      "type": "string",
      "metadata": {
        "description": "The application client ID used to run tests."
      }
    },
    "testApplicationSecret": {
      "type": "string",
      "metadata": {
        "description": "The application client secret used to run tests."
      }
    },
    "testApplicationOid": {
      "type": "string",
      "defaultValue": "b3653439-8136-4cd5-aac3-2a9460871ca6",
      "metadata": {
        "description": "The client OID to grant access to test resources."
      }
    },
    "location": {
      "type": "string",
      "defaultValue": "[resourceGroup().location]",
      "metadata": {
        "description": "The location of the resource. By default, this is the same as the resource group."
      }
    }
  },
  "functions": [],
  "variables": {
    "azureConfidentialLedgerUrl": "[format('https://{0}.confidential-ledger.azure.com', parameters('ledgerName'))]"
  },
  "resources": [
    {
      "name": "[parameters('ledgerName')]",
      "type": "Microsoft.ConfidentialLedger/ledgers",
      "apiVersion": "2022-05-13",
      "location": "[parameters('location')]",
      "properties": {
        "ledgerType": "Public",
        "aadBasedSecurityPrincipals": [
          {
            "principalId": "[parameters('testApplicationOid')]",
            "ledgerRoleName": "Administrator"
          }
        ]
      }
    }
  ],
  "outputs": {
    "CONFIDENTIALLEDGER_SUBSCRIPTION_ID": {
      "type": "string",
      "value": "[parameters('subscriptionId')]"
    },
    "CONFIDENTIALLEDGER_TENANT_ID": {
      "type": "string",
      "value": "[parameters('tenantId')]"
    },
    "CONFIDENTIALLEDGER_CLIENT_ID": {
      "type": "string",
      "value": "[parameters('testApplicationId')]"
    },
    "CONFIDENTIALLEDGER_CLIENT_SECRET": {
      "type": "string",
      "value": "[parameters('testApplicationSecret')]"
    },
    "CONFIDENTIALLEDGER_ENDPOINT": {
      "type": "string",
      "value": "[variables('azureConfidentialLedgerUrl')]"
    },
    "CONFIDENTIALLEDGER_GROUP": {
      "type": "string",
      "value": "[parameters('resourceGroup')]"
    }
  }
}