{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "metadata": {
    "_generator": {
      "name": "bicep",
      "version": "0.29.47.4906",
      "templateHash": "4877818155640134380"
    }
  },
  "parameters": {
    "baseName": {
      "type": "string"
    },
    "enableMultipleWriteLocations": {
      "type": "bool",
      "defaultValue": false,
      "metadata": {
        "description": "Flag to enable or disable multiple write locations on CosmosDB Account"
      }
    },
    "defaultConsistencyLevel": {
      "type": "string",
      "defaultValue": "Session",
      "metadata": {
        "description": "Default Cosmosdb Account level consistency"
      }
    },
    "enableMultipleRegions": {
      "type": "bool",
      "defaultValue": false,
      "metadata": {
        "description": "Enable multiple regions, default value is false"
      }
    },
    "location": {
      "type": "string",
      "defaultValue": "[resourceGroup().location]",
      "metadata": {
        "description": "Location for the Cosmos DB account."
      }
    },
    "apiVersion": {
      "type": "string",
      "defaultValue": "2023-04-15",
      "metadata": {
        "description": "The api version to be used by Bicep to create resources"
      }
    },
    "testApplicationOid": {
      "type": "string",
      "metadata": {
        "description": "The principal to assign the role to. This is application object id."
      }
    }
  },
  "variables": {
    "accountName": "[toLower(parameters('baseName'))]",
    "resourceId": "[resourceId('Microsoft.DocumentDB/databaseAccounts', toLower(variables('accountName')))]",
    "singleRegionConfiguration": [
      {
        "locationName": "East US 2",
        "provisioningState": "Succeeded",
        "failoverPriority": 0,
        "isZoneRedundant": false
      }
    ],
    "multiRegionConfiguration": [
      {
        "locationName": "East US 2",
        "provisioningState": "Succeeded",
        "failoverPriority": 0,
        "isZoneRedundant": false
      },
      {
        "locationName": "East US",
        "provisioningState": "Succeeded",
        "failoverPriority": 1,
        "isZoneRedundant": false
      }
    ],
    "locationsConfiguration": "[if(parameters('enableMultipleRegions'), variables('multiRegionConfiguration'), variables('singleRegionConfiguration'))]",
    "roleDefinitionId": "[guid(parameters('baseName'), 'roleDefinitionId')]",
    "roleAssignmentId": "[guid(parameters('baseName'), 'roleAssignmentId')]",
    "roleDefinitionName": "ExpandedRbacActions"
  },
  "resources": [
    {
      "type": "Microsoft.DocumentDB/databaseAccounts",
      "apiVersion": "2023-04-15",
      "name": "[toLower(variables('accountName'))]",
      "location": "[parameters('location')]",
      "kind": "GlobalDocumentDB",
      "properties": {
        "publicNetworkAccess": "Enabled",
        "enableAutomaticFailover": false,
        "enableMultipleWriteLocations": "[parameters('enableMultipleWriteLocations')]",
        "isVirtualNetworkFilterEnabled": false,
        "disableKeyBasedMetadataWriteAccess": false,
        "enableFreeTier": false,
        "enableAnalyticalStorage": false,
        "databaseAccountOfferType": "Standard",
        "consistencyPolicy": {
          "defaultConsistencyLevel": "[parameters('defaultConsistencyLevel')]"
        },
        "capabilities": [
          {
            "name": "EnableNoSQLVectorSearch"
          }
        ],
        "locations": "[variables('locationsConfiguration')]"
      }
    },
    {
      "type": "Microsoft.DocumentDB/databaseAccounts/sqlRoleDefinitions",
      "apiVersion": "2023-04-15",
      "name": "[format('{0}/{1}', toLower(variables('accountName')), variables('roleDefinitionId'))]",
      "properties": {
        "roleName": "[variables('roleDefinitionName')]",
        "type": "CustomRole",
        "assignableScopes": [
          "[resourceId('Microsoft.DocumentDB/databaseAccounts', toLower(variables('accountName')))]"
        ],
        "permissions": [
          {
            "dataActions": [
              "Microsoft.DocumentDB/databaseAccounts/readMetadata",
              "Microsoft.DocumentDB/databaseAccounts/sqlDatabases/*",
              "Microsoft.DocumentDB/databaseAccounts/throughputSettings/*"
            ]
          }
        ]
      },
      "dependsOn": [
        "[resourceId('Microsoft.DocumentDB/databaseAccounts', toLower(variables('accountName')))]"
      ]
    },
    {
      "type": "Microsoft.DocumentDB/databaseAccounts/sqlRoleAssignments",
      "apiVersion": "2023-04-15",
      "name": "[format('{0}/{1}', toLower(variables('accountName')), guid(resourceGroup().id, variables('roleAssignmentId'), parameters('testApplicationOid')))]",
      "properties": {
        "roleDefinitionId": "[resourceId('Microsoft.DocumentDB/databaseAccounts/sqlRoleDefinitions', toLower(variables('accountName')), variables('roleDefinitionId'))]",
        "principalId": "[parameters('testApplicationOid')]",
        "scope": "[resourceId('Microsoft.DocumentDB/databaseAccounts', toLower(variables('accountName')))]"
      },
      "dependsOn": [
        "[resourceId('Microsoft.DocumentDB/databaseAccounts/sqlRoleDefinitions', toLower(variables('accountName')), variables('roleDefinitionId'))]",
        "[resourceId('Microsoft.DocumentDB/databaseAccounts', toLower(variables('accountName')))]"
      ]
    }
  ],
  "outputs": {
    "ACCOUNT_HOST": {
      "type": "string",
      "value": "[reference(variables('resourceId'), parameters('apiVersion')).documentEndpoint]"
    }
  }
}