{
  "properties": {
    "action": {
      "actionType": "CreateMonitor",
      "monitorDefinition": {
        "computeConfiguration": {
          "computeType": "ServerlessSpark",
          "instanceType": "standard_e8s_v3",
          "runtimeVersion": "3.3",
          "computeIdentity": {
            "computeIdentityType": "AmlToken"
          }
        },
        "monitoringTarget": {
          "taskType": "questionanswering",
          "deploymentId": "azureml:va-endpoint:va-deployment"
        },
        "signals": {
          "testSignal": {
            "signalType": "GenerationTokenStatistics",
            "mode": "Enabled",
            "samplingRate": "0.1",
            "productionData": 
              {
                "inputDataType": "Trailing",
                "uri": "my_model_inputs_data:1",
                "jobInputType": "mltable",
                "columns": {
                  "prompt_column": "question",
                  "completion_column": "answer"
                },
                "windowSize": "P7D",
                "windowOffset": "P0D"
              },
            "metricThresholds": [
                  {
                      "metric": "TotalTokenCount",
                      "threshold": {
                      "value": 3
                      }
                  },
                  {
                      "metric": "TotalTokenCountPerGroup",
                      "threshold": {
                      "value": 10
                      }
                  }
              ]
          }
        }
      }
    },
    "trigger": {
      "triggerType": "Recurrence",
      "timeZone": "UTC",
      "frequency": "day",
      "interval": 1,
      "schedule": {
        "hours": [
          22,
          20
        ],
        "minutes": [
          0,
          30
        ]
      }
    },
    "properties": {
      "prop1": "value"
    },
    "tags": {
      "tag1": "tag"
    }
  }
}